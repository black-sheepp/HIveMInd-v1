<link rel="stylesheet" href="/css/updateProfile.css" />

<div class="update-profile-page">
  <% if(user.id == profile_user.id) {%>
  <form action="/users/confirm-update/<%= profile_user.id %>" method="post" class="sign_up" enctype="multipart/form-data">
    <fieldset>
      <legend>HiveMind | Update Profile</legend>
      <br>
      <br>
      <p style="text-align: center;">Make changes to the section you wish</p>
      <div class="form-group">
        <label for="exampleInputEmail1" class="form-label mt-4"
          >Email address</label
        >
        <input
          type="email"
          name="email"
          class="form-control"
          id="exampleInputEmail1"
          aria-describedby="emailHelp"
          value="<%= profile_user.email %>"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputfirstName" class="form-label mt-4"
          >First Name</label
        >
        <input
          type="text"
          name="firstName"
          class="form-control"
          id="exampleInputfirstName"
          aria-describedby="emailHelp"
          value="<%= profile_user.firstName %>"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputlastName" class="form-label mt-4"
          >Last Name</label
        >
        <input
          type="text"
          name="lastName"
          class="form-control"
          id="exampleInputlastName"
          aria-describedby="emailHelp"
          value="<%= profile_user.lastName %>"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1" class="form-label mt-4"
          >Change Password</label
        >
        <input
          type="password"
          name="password"
          class="form-control"
          id="exampleInputPassword1"
          value="<%= profile_user.password %>"
        />
      </div>

      <div class="form-group">
        <label for="exampleInputphone" class="form-label mt-4">Phone</label>
        <input
          type="number"
          name="phone"
          class="form-control"
          id="exampleInputphone"
          value="<%= profile_user.phone %>"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputaddress" class="form-label mt-4">Address</label>
        <input
          type="text"
          name="address"
          class="form-control"
          id="exampleInputaddress"
          value="<%= profile_user.address %>"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputjobProfile" class="form-label mt-4"
          >Job Profile</label
        >
        <input
          type="text"
          name="jobProfile"
          class="form-control"
          id="exampleInputjobProfile"
          value="<%= profile_user.jobProfile %>"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputcompanyName" class="form-label mt-4"
          >Company Name</label
        >
        <input
          type="text"
          name="companyName"
          class="form-control"
          id="exampleInputcompanyNameskills"
          value="<%= profile_user.companyName %>"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputskills" class="form-label mt-4">Skills</label>
        <input
          type="text"
          name="skills"
          class="form-control"
          id="exampleInputskills"
          value="<%= profile_user.skills %>"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputlinkedIn" class="form-label mt-4"
          >linkedIn</label
        >
        <input
          type="text"
          name="linkedIn"
          class="form-control"
          id="exampleInputlinkedIn"
          value="<%= profile_user.linkedIn %>"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputgithub" class="form-label mt-4">Github</label>
        <input
          type="text"
          name="github"
          class="form-control"
          id="exampleInputgithub"
          value="<%= profile_user.github %>"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1" class="form-label mt-4"
          >Profile Picture</label
        ><br>
        <input
          type="file"
          name="avatar"
          placeholder="Profile Picture"
        />
      </div>
      <button
        type="submit"
        class="btn btn-primary"
        style="background-color: blue; color: white; margin: 20px 0;"
      >
        Update Profile
      </button>
    </fieldset>
  </form>
  <% } %>
</div>
